<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card_view_event"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_event_dom"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="35sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="12"/>

        <TextView
            android:id="@+id/item_event_dow"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_event_dom"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Mon"/>

        <TextView
            android:id="@+id/item_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_event_dow"
            android:layout_toStartOf="@+id/item_event_subscribe"
            android:layout_marginBottom="5dp"
            android:textSize="19sp"
            tools:text="Name"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_event_name"
            android:layout_toEndOf="@id/item_event_dow"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            tools:text="Time"/>

        <TextView
            android:id="@+id/item_event_organizations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_event_time"
            android:layout_toEndOf="@id/item_event_dow"
            android:layout_toStartOf="@id/item_event_subscribe"
            android:textSize="13sp"
            tools:text="Organizations"
            android:textStyle="italic"/>

        <ImageButton
            android:id="@+id/item_event_subscribe"
            style="@style/Icon"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="@id/item_event_time"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_favorite_border"
            android:clickable="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

