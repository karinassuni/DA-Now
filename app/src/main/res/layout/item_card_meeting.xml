<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view_regular_meeting"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clickable="false"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:minHeight="25dp">

        <TextView
            android:id="@+id/item_regular_meeting_dom"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="35sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="12"/>

        <TextView
            android:id="@+id/item_regular_meeting_dow"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_regular_meeting_dom"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Mon"/>

        <TextView
            android:id="@+id/item_regular_meeting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_regular_meeting_dow"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="19sp"
            android:text="Regular Meeting"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_regular_meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_regular_meeting_dow"
            android:layout_below="@id/item_regular_meeting_name"
            android:textSize="16sp"
            tools:text="Time"/>

        <ImageButton
            android:id="@+id/item_regular_meeting_subscribe"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="@id/item_regular_meeting_time"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_favorite_border"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            android:scaleType="fitCenter"
            android:clickable="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
